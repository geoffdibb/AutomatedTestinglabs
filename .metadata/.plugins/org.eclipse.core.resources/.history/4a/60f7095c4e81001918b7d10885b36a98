package com.bae.Blackjack.tests;

import static org.junit.Assert.*;

import org.junit.BeforeClass;
import org.junit.Test;

import com.bae.Blackjack.MainApp.BlackJack;

public class UnitTests {

	static BlackJack blackjack;
	@BeforeClass
	public static void setup() {
		blackjack = new BlackJack();
	}
	
	@Test
	public void test1() {
		assertEquals(0, blackjack.play(0, 0));
	}
	@Test
	public void test2() {
		assertEquals(0, blackjack.play(0, 21));
	}
	@Test
	public void test3() {
		assertEquals(0, blackjack.play(21, 0));
	}
}
